<h1>New Article</h1>
<% if @errors.present? %>
<% @errors.each do |errrror| %>
<%= errrror  %>
<% end %>

<% end %>

<%= form_with model: @article, url: '/articles' do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.label :status %><br>
    <%= form.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>

<a href='/articles'>Go Back to Articles </a>